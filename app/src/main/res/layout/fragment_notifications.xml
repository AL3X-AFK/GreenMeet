<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:padding="16dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <!-- Toolbar con flecha y título -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="58dp"
            android:layout_marginBottom="16dp">

            <ImageButton
                android:id="@+id/btnBack"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/arrow_back"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:contentDescription="Volver"
                android:background="@color/white"
                app:tint="@color/black"/>

            <TextView
                android:id="@+id/tvTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Notificaciones"
                android:textSize="28sp"
                android:textStyle="bold"
                android:textColor="#000000"
                android:layout_toEndOf="@id/btnBack"
                android:layout_toStartOf="@id/dummyEnd"
                android:layout_centerVertical="true"
                android:singleLine="false"
                android:ellipsize="none"/>

            <!-- Dummy view invisible para delimitar el final del título -->
            <View
                android:id="@+id/dummyEnd"
                android:layout_width="48dp"
                android:layout_height="1dp"
                android:layout_alignParentEnd="true"/>
        </RelativeLayout>

        <!-- ScrollView para notificaciones -->
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingBottom="16dp">

                <!-- Notificación ejemplo 1 -->
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="4dp"
                    android:backgroundTint="@color/green_300">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="16dp">

                        <TextView
                            android:id="@+id/tvNotificationTitle1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Título de la notificación"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:textColor="#000000"/>

                        <TextView
                            android:id="@+id/tvNotificationMessage1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Aquí va el mensaje de la notificación. Puede ser largo y descriptivo."
                            android:textSize="14sp"
                            android:textColor="#333333"
                            android:layout_marginTop="4dp"/>

                        <TextView
                            android:id="@+id/tvNotificationDate1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Hace 2 horas"
                            android:textSize="12sp"
                            android:textColor="@color/gray"
                            android:layout_marginTop="4dp"/>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <!-- Notificación ejemplo 2 -->
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="4dp"
                    android:backgroundTint="@color/green_300">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="16dp">

                        <TextView
                            android:id="@+id/tvNotificationTitle2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Otra notificación"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:textColor="#000000"/>

                        <TextView
                            android:id="@+id/tvNotificationMessage2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Mensaje de otra notificación para mostrar cómo se ve."
                            android:textSize="14sp"
                            android:textColor="#333333"
                            android:layout_marginTop="4dp"/>

                        <TextView
                            android:id="@+id/tvNotificationDate2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Ayer"
                            android:textSize="12sp"
                            android:textColor="@color/gray"
                            android:layout_marginTop="4dp"/>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>


                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="4dp"
                    android:backgroundTint="@color/green_100">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="16dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Notificacion ya leida"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:textColor="#000000"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Cuando una notificacion ya fue mostrada, cambiara de color"
                            android:textSize="14sp"
                            android:textColor="#333333"
                            android:layout_marginTop="4dp"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Hace 1 mes"
                            android:textSize="12sp"
                            android:textColor="@color/gray"
                            android:layout_marginTop="4dp"/>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

            </LinearLayout>
        </ScrollView>
    </LinearLayout>
</FrameLayout>
